# Add Zabbix Repo
wget https://repo.zabbix.com/zabbix/7.0/ubuntu/pool/main/z/zabbix-release/zabbix-release_7.0-1+ubuntu22.04_all.deb
sudo dpkg -i zabbix-release_7.0-1+ubuntu22.04_all.deb
sudo apt update

# Install Server, Frontend and Agent
sudo apt install -y zabbix-server-pgsql zabbix-frontend-php zabbix-apache-conf zabbix-sql-scripts zabbix-agent

# Import Schema
zcat /usr/share/zabbix-sql-scripts/postgresql/server.sql.gz | sudo -u zabbix psql zabbix

# Configure DB in Zabbix  Edit /etc/zabbix/zabbix_server.conf
DBPassword=StrongPassw0rd!
DBName=zabbix
DBUser=zabbix

# Enable Services
sudo systemctl enable --now zabbix-server zabbix-agent apache2
